{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@microsoft/playwright-mcp"
      ]
    },
    "ref": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "ref-tools-mcp"
      ]
    },
    "desktop-commander": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@wonderwhy-er/desktop-commander"
      ]
    },
    "sequential-thinking": {
      "type": "remote",
      "url": "https://server.smithery.ai/@smithery-ai/server-sequential-thinking/mcp"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "zen": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "zen-mcp"
      ]
    },
    "gemini-cli-server": {
      "type": "stdio",
      "command": "gemini",
      "args": [
        "mcp",
        "server"
      ]
    }
  }
}