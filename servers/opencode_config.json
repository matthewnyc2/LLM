{
  "$schema": "https://opencode.ai/config.json",
  "windows": {
    "mcp": {
      "supabase": {
        "type": "remote",
        "url": "https://server.smithery.ai/supabase/mcp",
        "headers": {
          "SMITHERY_PROFILE": "{env:SMITHERY_PROFILE}",
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}"
        }
      },
      "ref": {
        "type": "stdio",
        "command": "npx.cmd",
        "args": [
          "-y",
          "ref-tools-mcp"
        ]
      },
      "exa": {
        "type": "remote",
        "url": "https://server.smithery.ai/exa/mcp",
        "headers": {
          "SMITHERY_PROFILE": "{env:SMITHERY_PROFILE}",
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}"
        }
      },
      "sequential-thinking": {
        "type": "remote",
        "url": "https://server.smithery.ai/@smithery-ai/server-sequential-thinking/mcp"
      },
      "browserbase": {
        "type": "remote",
        "url": "https://server.smithery.ai/@browserbasehq/mcp-browserbase/mcp",
        "headers": {
          "SMITHERY_PROFILE": "{env:SMITHERY_PROFILE}",
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}"
        }
      },
      "notion": {
        "type": "remote",
        "url": "https://server.smithery.ai/notion/mcp",
        "headers": {
          "SMITHERY_PROFILE": "{env:SMITHERY_PROFILE}",
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}"
        }
      },
      "clear-thought-mcp": {
        "type": "stdio",
        "command": "npx.cmd",
        "args": [
          "-y",
          "@smithery/cli@latest",
          "run",
          "@ThinkFar/clear-thought-mcp"
        ],
        "env": {
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}"
        }
      },
      "gmail-mcp": {
        "type": "stdio",
        "command": "npx.cmd",
        "args": [
          "-y",
          "@smithery/cli@latest",
          "run",
          "@shinzo-labs/gmail-mcp"
        ],
        "env": {
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}",
          "SMITHERY_PROFILE": "{env:SMITHERY_PROFILE}"
        }
      },
      "playwright-mcp": {
        "type": "stdio",
        "command": "npx.cmd",
        "args": [
          "-y",
          "@smithery/cli@latest",
          "run",
          "@playwright/mcp"
        ],
        "env": {
          "SMITHERY_API_KEY": "{env:SMITHERY_API_KEY}"
        }
      },
      "context7": {
        "type": "remote",
        "url": "https://mcp.context7.com/mcp"
      },
      "serena": {
        "type": "remote",
        "url": "http://localhost:8765/sse",
        "timeout": 10000
      },
      "zen": {
        "type": "stdio",
        "command": "uvx",
        "args": [
          "--from",
          "git+https://github.com/BeehiveInnovations/zen-mcp-server.git",
          "zen-mcp-server"
        ]
      },
      "playwright": {
        "type": "stdio",
        "command": "npx.cmd",
        "args": [
          "-y",
          "@playwright/mcp"
        ]
      },
      "desktop-commander": {
        "type": "stdio",
        "command": "npx.cmd",
        "args": [
          "-y",
          "@wonderwhy-er/desktop-commander"
        ]
      },
      "gemini-cli-server": {
        "type": "stdio",
        "command": "gemini.cmd",
        "args": [
          "mcp",
          "server"
        ]
      }
    }
  },
